<h1>Wine!</h1>

<h2>Wine you have drank!</h2>

<ul>
  {{#each wine}}
    {{#unless drank}}
      {{> wine/wine-block drank=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Wine that has not been drank!</h2>

<ul>
  {{#each wine}}
    {{#if drank}}
      {{> wine/wine-block drank=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Wine</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Wine Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="drank">Drank?</label><br>
    <input type="radio" name="drank" value="1" checked> Not Drank!<br>
    <input type="radio" name="drank" value="0"> Drank
  </div>

  <button type="submit">Add Wine</button>
</form>
